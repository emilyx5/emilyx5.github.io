---
import projectImage from '@assets/images/project.png';
import Tags from '@components/ui/Tags.astro';
import { Image } from 'astro:assets';

interface Props {
	url?: string;
	alt?: string;
	cover?:string | ImageMetadata;
	title?: string;
	description: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
}

const {
	url = '#',
	alt = 'Project image',
	cover = import.meta.env.IMAGE_PATH,
	description = 'Project Description',
	title = 'Project title',
	tags = ['Tags'],
} = Astro.props;
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class=" bg-slate-100 p-6 pt-8 shadow-md shadow-purple dark:shadow-orange duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a href={url} aria-label="link to project">
			<div class="relative flex items-end overflow-hidden">
				<img src={cover} alt={alt} class="bg-white" loading="eager" />
			</div>
			<div class="mt-6 p-1">
				<h3 class=" mb-2 text-xl text-orange lg:text-2xl font-bold">{title}</h3>
				<p class="text-sm text-black italic">{description}</p>
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>
